@model ModelService.AdminBaseViewModel
<nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top">
<!-- Sidebar Toggle (Topbar) -->
<button type="button" id="sidebarCollapse" class="btn btn-link rounded-circle mr-3">
    <i class="fas fa-bars"></i>
</button>
<!-- Topbar Navbar -->
<ul class="navbar-nav ml-auto">
    <div class="topbar-divider d-none d-sm-block"></div>

    <!-- Nav Item - User Information -->
    <li class="nav-item dropdown no-arrow">
        <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <span class="mr-2 d-none d-lg-inline text-gray-600 small">@Model.Profile.Firstname @Model.Profile.Lastname</span>
            <img class="img-profile rounded-circle" src="@Model.Profile.ProfilePic">
        </a>
        <!-- Dropdown - User Information -->
        <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in" aria-labelledby="userDropdown">
            <a class="dropdown-item" asp-area="Admin" asp-controller="Profile" asp-action="Index" method="get">
                <i class="fas fa-user fa-sm fa-fw mr-2 text-gray-400"></i>
                Profile
            </a>
            <a class="dropdown-item" asp-controller="Profile" asp-action="Security" method="get">
                <i class="fas fa-cogs fa-sm fa-fw mr-2 text-gray-400"></i>
                Security
            </a>
            <a class="dropdown-item" asp-controller="Profile" asp-action="Activity" method="get">
                <i class="fas fa-list fa-sm fa-fw mr-2 text-gray-400"></i>
                Activity Log
            </a>
            <div class="dropdown-divider"></div>
            <form asp-area="Admin" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
                <button class="dropdown-item" href="#" data-toggle="modal" type="submit">
                    <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                    Logout
                </button>
            </form>
        </div>
    </li>

</ul>
</nav>